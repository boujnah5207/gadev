@model IEnumerable<DB.HR_UsersToJobs>

@{
    ViewBag.Title = Loc.Dic.User;
    ViewBag.PageName = "";
    ViewBag.noSubMenu = true;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HR_Jobs.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobPercent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HR_Jobs.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobPercent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
