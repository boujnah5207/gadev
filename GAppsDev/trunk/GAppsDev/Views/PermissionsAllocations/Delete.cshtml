@model DB.Budgets_BasketsToAllocation

@{
    ViewBag.Title = "Delete";
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllBudgets";
}

<h2>@ViewBag.budgetYear > @Loc.Dic.Permissions > @ViewBag.PermissionName</h2>
<h2>@Loc.Dic.Delete</h2>

<h3>@Loc.Dic.DeleteAlertMessege</h3>
<fieldset>
    <legend>@Loc.Dic.BasketsToAllocation</legend>

    <div class="display-label">
        @Loc.Dic.BudgetBasket
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Budgets_Baskets.Name)
    </div>

    <div class="display-label">
        @Loc.Dic.BudgetAllocation
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.Budgets_Allocations.DisplayName)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="@Loc.Dic.Delete" />
        |
        @Html.ActionLink(@Loc.Dic.BackToList, "Index", )
    </p>
}
