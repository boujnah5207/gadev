@model DB.Budgets_Allocations

@{
    ViewBag.Title = "Edit";
    ViewBag.PageName = "Budgets";
    ViewBag.SubPageName = "Budgets";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Budgets_Allocations</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.IncomeId, "Budgets_Incomes")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IncomeId")
            @Html.ValidationMessageFor(model => model.IncomeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpenseId, "Budgets_Expenses")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ExpenseId")
            @Html.ValidationMessageFor(model => model.ExpenseId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Amount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
