@model IEnumerable<DB.User>

@{
    ViewBag.Title = "חיפוש משתמשים";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("SearchForm", new { isExpanding = false, isCollapsed= false })

@if(Model != null)
{
    <fieldset>
        <legend>תוצאות החיפוש</legend>
    @if (Model.Count() != 0)
    { 
        @Html.Action("SimpleList", new { users = Model })
    }
    else
    {
        <span class="no-properties">לא נמצאו משתמשים.</span> 
    }
    </fieldset>
}