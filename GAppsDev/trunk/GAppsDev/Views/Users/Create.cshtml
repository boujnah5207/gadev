@model DB.PendingUser

@{
    ViewBag.Title = "משתמש חדש";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllUsers";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>צור משתמש חדש</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Roles)
        </div>
        <div class="editor-field">
            @foreach (string roleName in ViewBag.RolesList)
            {
                <input name="roleNames" type="checkbox" value="@roleName" /> <span>@roleName</span> <br />
            }
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OrdersApproverId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.OrdersApproverId, (SelectList)ViewBag.UsersList)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DepartmentId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DepartmentId, (SelectList)ViewBag.DepartmentsList)
        </div>

        <p>
            <input type="submit" value="צור משתמש" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
