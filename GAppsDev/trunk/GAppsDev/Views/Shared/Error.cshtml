@{
    ViewBag.Title = "Error";
    ViewBag.PageName = "Error";
    ViewBag.NoSubMenu = true;

    string HtmlNewLine = System.Environment.NewLine + "<br />";
    string HtmlErrorMessage = ViewBag.ErrorMessage.Replace(System.Environment.NewLine, HtmlNewLine);
}

<h2>
    @ViewBag.Title
</h2>

<div id="error-container">
    <span>
        @Html.Raw(HtmlErrorMessage)
    </span>
</div>
<br />

<div>
    <input class="FormButton" type=button value="חזור" onClick="history.go(-1)">
</div>