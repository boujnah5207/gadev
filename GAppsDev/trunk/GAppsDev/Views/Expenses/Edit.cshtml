@model DB.Budgets_Expenses

@{
    ViewBag.Title = "Edit";
    ViewBag.PageName = "Budgets";
    ViewBag.SubPageName = "AllExpenses";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Budgets_Expenses</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.BudgetId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("BudgetId")
            @Html.ValidationMessageFor(model => model.BudgetId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DepartmentId, "Department")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DepartmentId")
            @Html.ValidationMessageFor(model => model.DepartmentId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParentProjectId, "Projects_ParentProject")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ParentProjectId")
            @Html.ValidationMessageFor(model => model.ParentProjectId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubProjectId, "Projects_SubProject")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SubProjectId")
            @Html.ValidationMessageFor(model => model.SubProjectId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Amount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CustomName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CustomName)
            @Html.ValidationMessageFor(model => model.CustomName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
