@model int?
@{
    ViewBag.Title = Loc.Dic.AllBudgets;
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllBudgets";
}
@if (Model.HasValue)
{
    <h2>@Loc.Dic.UpdateBudget @Model</h2>
    using (Html.BeginForm("Import", "Budgets", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    @Html.ValidationSummary(true)

    <text>
    <input type="hidden" name="id" value="@Model" />
    <input type="radio" name="budgetType" value="Year"> @Loc.Dic.Year<br>
    <input type="radio" name="budgetType" value="Month"> @Loc.Dic.Month<br>
    <input type="file" name="file" />
    <input type="submit" value="OK" />
    </text>
    }
}
else
{
    <h2>@Loc.Dic.ImportBudget</h2>
    using (Html.BeginForm("Import", "Budgets", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    @Html.ValidationSummary(true)
    <text>
    @Loc.Dic.Year
    <input type="text" name="year" />
    <input type="radio" name="budgetType" value="Year"> @Loc.Dic.Year<br>
    <input type="radio" name="budgetType" value="Month"> @Loc.Dic.Month<br>
    <input type="file" name="file" />
    <input type="submit" value="OK" />
    </text>
    }
}
