@model DB.Budgets_Permissions

@{
    ViewBag.Title = Loc.Dic.CreateNewPermission;
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllPermissions";
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "Permissions";
}

<script type="text/javascript" src='@Url.Action("LocalizeJavascript", "Localization")'></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Loc.Dic.Permission</legend>

        <div class="editor-label">
            @Loc.Dic.Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <p>
            <input type="submit" value="@Loc.Dic.CreateNewPermission" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Loc.Dic.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
