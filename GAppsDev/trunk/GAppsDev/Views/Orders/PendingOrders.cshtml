@model IEnumerable<DB.Order>

@{
    ViewBag.Title = "אישור הזמנות";
}

@section ExtraScripts{
    <script src="~/Scripts/SearchScript.js"></script>
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}

@Html.Action("SearchForm", new { isExpanding = true, isCollapsed= true })

@if (Model.Count() != 0)
{ 
    @Html.Action("List", new { orders = Model, baseUrl = Url.Action("PendingOrders"), isOrdered = true, isPaged = true, sortby = (string)ViewBag.Sortby, order = (string)ViewBag.Order, currPage = (int)ViewBag.CurrPage, NumberOfPages = (int)ViewBag.NumberOfPages })    
}
else
{
    <span class="no-properties">לא נמצאו הזמנות.</span> 
}
