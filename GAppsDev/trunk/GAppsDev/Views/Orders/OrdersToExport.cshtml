@model List<DB.Order>

@{
    ViewBag.Title = Loc.Dic.OrdersToExport;
    ViewBag.PageName = "Orders";
    ViewBag.SubPageName = "ExportToFile";
}

@section ExtraScripts{
    <script src="~/Scripts/OrdersToExportScript.js"></script>
}

@using (Html.BeginForm("OrdersToExport", "Orders", FormMethod.Post, new { id = "mainForm" }))
{
    <p>
        @if (ViewBag.isRecovery)
        {
            @Html.ActionLink(Loc.Dic.ExportToFile, "OrdersToExport")
        }
        else
        {
            @Html.ActionLink(Loc.Dic.OrdersRecovery, "OrdersToExport", new { isRecovery = true })
        }
    </p>

    @Html.Action("List", new { orders = Model, baseUrl = Url.Action("OrdersToExport"), isCheckBoxed = true, isOrdered = true, isPaged = false, sortby = (string)ViewBag.Sortby, order = (string)ViewBag.Order, currPage = 1, NumberOfPages = 1 })
    
    <p>
        <input type="submit" value="@Loc.Dic.Export">
    </p>
}

