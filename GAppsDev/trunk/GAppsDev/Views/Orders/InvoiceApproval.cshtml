@{
    ViewBag.Title = "InvoiceApproval";
    ViewBag.PageName = "Orders";
    ViewBag.SubPageName = "MyOrders";
}

<h2>InvoiceApproval</h2>
@using (Html.BeginForm())
{
    @Html.ActionLink(Loc.Dic.DownloadInvoice, "DownloadInvoice", new { id = ViewBag.orderId });
    
    <input type="hidden" name="orderId" value = "@ViewBag.orderId" />
    <input type="submit" name="selectedStatus" value="@Loc.Dic.ApproveInvoce" />
    <input type="submit" name="selectedStatus" value="@Loc.Dic.CancelOrder" />
}