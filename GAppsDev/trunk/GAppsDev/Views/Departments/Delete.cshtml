@model DB.Department

@{
    ViewBag.Title = Loc.Dic.Delete;
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllDepartments";
}

<h3>@Loc.Dic.DeleteAlertMessege</h3>
<fieldset>
    <legend>@Loc.Dic.Departments</legend>

    <div class="display-label">
         @Loc.Dic.Name
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value = "@Loc.Dic.Delete" /> |
        @Html.ActionLink(Loc.Dic.BackToList, "Index")
    </p>
}
