@model DB.User
@using DA

<fieldset>
    <legend>@Loc.Dic.User</legend>
    
    <div class="display-label">
         @Loc.Dic.Name
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) <br />
        (@Html.DisplayFor(model => model.Email))
    </div>
    <br />

    <div class="display-label">
         @Loc.Dic.Role
    </div>
    <div class="display-field">
        @(((DA.RoleType)Model.Roles).Describe())
    </div>
    <br />

    @if (Model.Users_ApprovalRoutes != null)
    {
    <div class="display-label">
         @Loc.Dic.ApprovalRoute
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Users_ApprovalRoutes.Name)
    </div>
    <br />
    }

    <div class="display-label">
         @Loc.Dic.CreationDate
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreationTime)
    </div>
    <br />

</fieldset>