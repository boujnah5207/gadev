@model DB.Budgets_Baskets

@{
    ViewBag.Title = Loc.Dic.CreateNewPermission;
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllPermissions";
}

<script type="text/javascript" src='@Url.Action("LocalizeJavascript", "Localization")'></script>
<h2>@Loc.Dic.BudgetBasket</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Loc.Dic.CreateNew</legend>

        <div class="editor-label">
            @Loc.Dic.Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)

        </div>
        <input type ="hidden", value ="@ViewBag.BudgetId", name="budgetId" />
        <p>
            <input type="submit" value="@Loc.Dic.CreateNewPermission" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Loc.Dic.BackToList, "Index", new { id = ViewBag.BudgetId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
