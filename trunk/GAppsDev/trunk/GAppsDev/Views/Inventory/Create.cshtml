@model GAppsDev.Models.InventoryItemModel.ManualCreateInventoryItemModel

@{
    ViewBag.Title = Loc.Dic.CreateNew;
    ViewBag.PageName = "Inventory";
    ViewBag.SubPageName = "AllInventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Loc.Dic.CreateNew</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Loc.Dic.Inventory</legend>

        <div class="editor-label">
            @Loc.Dic.ItemName
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.item.Title)
            @Html.ValidationMessageFor(model => model.item.Title)
        </div>

        <div class="editor-label">
            @Loc.Dic.ItemDescription
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.item.SubTitle)
            @Html.ValidationMessageFor(model => model.item.SubTitle)
        </div>

        <div class="editor-label">
            @Loc.Dic.Location
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.inventoryItem.LocationId, (SelectList)ViewBag.LocationId, Loc.Dic.SelectNone)
            @Html.ValidationMessageFor(model => model.inventoryItem.LocationId)
        </div>

        <div class="editor-label">
            @Loc.Dic.RelatedInventoryItem
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.inventoryItem.RelatedInventoryItem, (SelectList)ViewBag.RelatedInventoryItem, Loc.Dic.SelectNone)
            @Html.ValidationMessageFor(model => model.inventoryItem.RelatedInventoryItem)
        </div>

        <div class="editor-label">
            @Loc.Dic.AssignedTo
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.inventoryItem.AssignedTo)
            @Html.ValidationMessageFor(model => model.inventoryItem.AssignedTo)
        </div>

        <div class="editor-label">
            @Loc.Dic.SerialNumber
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.inventoryItem.SerialNumber)
            @Html.ValidationMessageFor(model => model.inventoryItem.SerialNumber)
        </div>

        <div class="editor-label">
            @Loc.Dic.WarrentyPeriodStart
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.inventoryItem.WarrentyPeriodStart)
            @Html.ValidationMessageFor(model => model.inventoryItem.WarrentyPeriodStart)
        </div>

        <div class="editor-label">
            @Loc.Dic.WarrentyPeriodEnd
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.inventoryItem.WarrentyPeriodEnd)
            @Html.ValidationMessageFor(model => model.inventoryItem.WarrentyPeriodEnd)
        </div>

        <div class="editor-label">
            @Loc.Dic.Notes
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.inventoryItem.Notes)
            @Html.ValidationMessageFor(model => model.inventoryItem.Notes)
        </div>


        <div class="editor-label">
            @Loc.Dic.Status
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.inventoryItem.Status)
            @Html.ValidationMessageFor(model => model.inventoryItem.Status)
        </div>

        <div class="editor-label">
            @Loc.Dic.IsOutOfInventory
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.inventoryItem.IsOutOfInventory)
            @Html.ValidationMessageFor(model => model.inventoryItem.IsOutOfInventory)
        </div>

        <p>
            <input type="submit" value="@Loc.Dic.CreateNew" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Loc.Dic.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
