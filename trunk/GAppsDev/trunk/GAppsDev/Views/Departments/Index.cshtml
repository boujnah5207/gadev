@model IEnumerable<DB.Department>

@{
    ViewBag.Title = Loc.Dic.AllDepartments;
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllDepartments";
}

<p>
    @Html.ActionLink(Loc.Dic.CreateNew, "Create")
</p>
<table>
    <tr>
        <th>
            @Loc.Dic.Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(Loc.Dic.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Loc.Dic.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Loc.Dic.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
