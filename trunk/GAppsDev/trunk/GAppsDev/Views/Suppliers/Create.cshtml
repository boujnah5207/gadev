@model DB.Supplier

@{
    ViewBag.Title = "Details";
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllSuppliers";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Loc.Dic.CreateNew</legend>

        <div class="editor-label">
            @Loc.Dic.Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Loc.Dic.ExternalId
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExternalId)
            @Html.ValidationMessageFor(model => model.ExternalId)
        </div>
        <p>
            <input type="submit" value=@Loc.Dic.CreateNew />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Loc.Dic.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
