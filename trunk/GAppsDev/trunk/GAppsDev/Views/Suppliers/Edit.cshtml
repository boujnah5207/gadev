@model DB.Supplier

@{
    ViewBag.Title = Loc.Dic.Edit;
    ViewBag.PageName = "Managment";
    ViewBag.SubPageName = "AllSuppliers";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Loc.Dic.Supplier</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Loc.Dic.Name
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.ImportedSupplierNumber
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ExternalId)
            @Html.ValidationMessageFor(model => model.ExternalId)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.vatNumber
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.VAT_Number)
            @Html.ValidationMessageFor(model => model.VAT_Number)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.Address
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.PhoneNumber
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Phone_Number)
            @Html.ValidationMessageFor(model => model.Phone_Number)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.AdditionalPhoneNumber
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Additional_Phone)
            @Html.ValidationMessageFor(model => model.Additional_Phone)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.CustomerNumber
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Customer_Number)
            @Html.ValidationMessageFor(model => model.Customer_Number)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.Email
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EMail)
            @Html.ValidationMessageFor(model => model.EMail)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.Fax
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fax)
            @Html.ValidationMessageFor(model => model.Fax)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.ActivityHours
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Activity_Hours)
            @Html.ValidationMessageFor(model => model.Activity_Hours)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.BranchLine
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Branch_line)
            @Html.ValidationMessageFor(model => model.Branch_line)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.PresentorName
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Presentor_name)
            @Html.ValidationMessageFor(model => model.Presentor_name)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.CrewNumber
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Crew_Number)
            @Html.ValidationMessageFor(model => model.Crew_Number)
        </div>
        <br />

        <div class="editor-label">
            @Loc.Dic.Notes
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Notes)
            @Html.ValidationMessageFor(model => model.Notes)
        </div>
        <br />

        <p>
            <input type="submit" value="@Loc.Dic.Submit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Loc.Dic.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
