@model DB.Location

@{
    ViewBag.Title = Loc.Dic.Delete;
    ViewBag.PageName = "Inventory";
    ViewBag.SubPageName = "Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Loc.Dic.Delete</h2>

<h3>@Loc.Dic.DeleteAlertMessege</h3>
<fieldset>
    <legend>@Loc.Dic.Location</legend>

    <div class="display-label">
        @Loc.Dic.City
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.City)
    </div>

    <div class="display-label">
        @Loc.Dic.Address
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Address)
    </div>

    <div class="display-label">
        @Loc.Dic.Name
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="@Loc.Dic.Delete" />
        |
        @Html.ActionLink(Loc.Dic.BackToList, "Index")
    </p>
}
