@model List<DB.Orders_History>
@{
    string ReverseOrder;
    if (ViewBag.Order == "ASC")
    {
        ReverseOrder = "DESC";
    }
    else
    {
        ReverseOrder = "ASC";
    }
}

@if (ViewBag.IsCheckBoxed)
{
    <button type="button" id="selectAllOrders" onclick="$('.ordersCheckbox').attr('checked', true)">@Loc.Dic.SelectAll</button> 
    <button type="button" id="deselectAllOrders" onclick="$('.ordersCheckbox').attr('checked', false)">@Loc.Dic.SelectNone</button>
}
<table class="listTable">
    <tr class="headingRow">
        @if (ViewBag.IsCheckBoxed)
        {
            <th>
                @Loc.Dic.SelectedItems
            </th>
        }
        @if ((bool)ViewBag.IsOrdered)
        {
            <th>@Html.FilterLink((string)ViewBag.BaseUrl, Loc.Dic.CreationDate, "CreationDate", ReverseOrder, (string)ViewBag.Sortby)</th>
            <th>@Html.FilterLink((string)ViewBag.BaseUrl, Loc.Dic.UserName, "UserId", ReverseOrder, (string)ViewBag.Sortby)</th>
            <th>@Html.FilterLink((string)ViewBag.BaseUrl, Loc.Dic.Action, "OrderHistoryActionId", ReverseOrder, (string)ViewBag.Sortby)</th>
            <th>@Html.FilterLink((string)ViewBag.BaseUrl, Loc.Dic.Notes, "Notes", ReverseOrder, (string)ViewBag.Sortby)</th>
        }
        else
        { 
            <th>
                @Loc.Dic.CreationDate
            </th>
            <th>
                @Loc.Dic.UserName
            </th>
            <th>
                @Loc.Dic.Action
            </th>
            <th>
                @Loc.Dic.Notes
            </th>
        }

    </tr>
    @for (int index = 0; index < Model.Count(); index++)
    {
        DB.Orders_History item = Model[index];
        
        <tr class="@if (index % 2 != 0)
                   {<text>oddRow</text>}
                   else
                   {<text>evenRow</text>}" >
            @if (ViewBag.IsCheckBoxed)
            {
                <td>
                    <input type="checkbox" id="checkbox-@item.Id" class="orderCheckbox" value="@item.Id" name="selectedOrder" />
                </td>
            }
            <td>
                @Html.DisplayTextFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => item.User.FullName)
            </td>
            <td>
                @GAppsDev.Translation.OrderHistoryAction((DA.HistoryActions)item.OrderHistoryActionId)
                @*@Html.DisplayTextFor(modelItem => item.Orders_History_Actions.Name)*@
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => item.Notes)
            </td>
        </tr>
    }
</table>
@if ((bool)ViewBag.IsPaged)
{ 
    <br />  
    @Html.Pagination((string)ViewBag.BaseUrl, (int)ViewBag.NumberOfPages, 10, (int)ViewBag.CurrPage, (string)ViewBag.Sortby, (string)ViewBag.Order)
}