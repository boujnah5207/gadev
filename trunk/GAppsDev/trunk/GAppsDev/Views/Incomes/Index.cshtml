@model IEnumerable<DB.Budgets_Incomes>

@{
    ViewBag.Title = Loc.Dic.AllIncomes;
    ViewBag.PageName = "Budgets";
    ViewBag.SubPageName = "AllIncomes";
}

<p>
    @Html.ActionLink(Loc.Dic.CreateNew, "Create")
</p>
<table>
    <tr>
        <th>
            @Loc.Dic.CreationDate
        </th>
        <th>
            @Loc.Dic.IncomeType

        </th>
        <th>
            @Loc.Dic.InstitutionIncome
        </th>
        <th>
            @Loc.Dic.CustomName
        </th>
        <th>
            @Loc.Dic.Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budgets_Incomes_types.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budgets_Incomes_Institutions.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
            @Html.ActionLink(Loc.Dic.CreateNew , "Edit", new { id = item.Id }) |
            @Html.ActionLink(Loc.Dic.Details, "Details", new { id = item.Id }) |
            @Html.ActionLink(Loc.Dic.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
