@{
    ViewBag.CurrentUser = (GAppsDev.OpenIdService.OpenIdUser)Session["User"];
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - cloudERP</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.23/jquery-ui.min.js"></script>
        @RenderSection("ExtraScripts", false)
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("cloudERP", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @if (ViewBag.CurrentUser != null && DA.Roles.HasRole(ViewBag.CurrentUser.Roles, DA.RoleType.OrdersWriter))
                            {
                                <li>@Html.ActionLink("ההזמנות שלי", "MyOrders", "Orders")</li>
                            }
                            @if (ViewBag.CurrentUser != null && DA.Roles.HasRole(ViewBag.CurrentUser.Roles, DA.RoleType.OrdersViewer))
                            {
                                <li>@Html.ActionLink("כל ההזמנות", "Index", "Orders")</li>
                            }
                            @if (ViewBag.CurrentUser != null && DA.Roles.HasRole(ViewBag.CurrentUser.Roles, DA.RoleType.OrdersApprover))
                            {
                                <li>@Html.ActionLink("אישור הזמנות", "PendingOrders", "Orders")</li>
                            }
                            @if (ViewBag.CurrentUser != null && DA.Roles.HasRole(ViewBag.CurrentUser.Roles, DA.RoleType.SystemManager))
                            {
                            <li>@Html.ActionLink("ניהול משתמשים", "Index", "Users")</li>
                            }
                            @if (ViewBag.CurrentUser != null && DA.Roles.HasRole(ViewBag.CurrentUser.Roles, DA.RoleType.SystemManager))
                            {
                            <li>@Html.ActionLink("פרוייקטים", "Index", "Projects")</li>
                            <li>@Html.ActionLink("תת-פרוייקטים", "Index", "SubProjects")</li>
                            <li>@Html.ActionLink("תקציב", "Index", "Budgets")</li>
                            <li>@Html.ActionLink("הכנסות", "Index", "Incomes")</li>
                            <li>@Html.ActionLink("הוצאות", "Index", "Expenses")</li>
                            <li>@Html.ActionLink("הקצאות תקציביות", "Index", "BudgetAllocations")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - cloudERP</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
